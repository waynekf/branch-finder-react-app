{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "src/app/ui/features/address/Search.tsx",
    "src/app/ui/features/map/MapContainer.tsx",
    "build/types/**/*.ts"
  ],
  "extends": "./tsconfig.base.json"
}
